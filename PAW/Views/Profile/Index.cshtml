@{
    ViewData["Title"] = "Profile - Gamer's Heaven";
    Layout = "_Layout";
}

<section class="profile-section">
    <h1>Your Profile</h1>
    <div class="profile-container">
        <div class="profile-picture">
            <img id="profile-img" src="~/images/profil.jpg" alt="Profile Picture">
        </div>
        <div class="profile-details">
            <h2 id="display-username">Radu</h2>
            <p><strong>Email:</strong> <span id="display-email">radu@gmail.com</span></p>
            <p><strong>Joined:</strong> <span id="display-date">01/01/2025</span></p>
            <a href="/Settings" class="edit-profile-btn">Edit Profile</a>
        </div>
    </div>
</section>

